<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.timeline.vpn.dao.db.HostV2Dao">
	<resultMap id="HostMap" type="HostPo">
		<id column="id" property="id" />
	</resultMap>
	<insert id="insert">
		insert into
		vpn.host(gateway,port,location,cert)
		values
		(#{gateway},#{port},#{location},#{cert})
	</insert>
	<select id="get" resultMap="HostMap">
		select * from vpn.host_v2 where id=#{id} and enable=1 
	</select>
	<select id="getAll" resultMap="HostMap">
		select * from vpn.host_v2 where enable=1 order by type asc ,id asc
	</select>

	<select id="getByLocation" resultMap="HostMap">
		select * from vpn.host_v2 where id=(select hostId from vpn.location_v2 where id=#{location}) and enable=1
	</select>
	
</mapper>
