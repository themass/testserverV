<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.timeline.vpn.dao.db.UserDao">
	<resultMap id="UserPoMap" type="UserPo">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="pwd" property="pwd" />
		<result column="sex" property="sex" />
		<result column="level" property="level" />
		<result column="time" property="time" />
		<result column="score" property="score" />
		
	</resultMap>
	<insert id="insert">
		insert into
		vpn.user(name,pwd,sex,level,time)
		values
		(#{name},#{pwd},#{sex},#{level},#{time})
	</insert>
	<select id="exist" resultMap="UserPoMap">
		select * from vpn.user where name=#{name}
	</select>
	<select id="get" resultMap="UserPoMap">
		select * from vpn.user where name=#{name} and pwd=#{pwd}
	</select>
	<update id="score">
	    update vpn.user set score=score+#{score} where name=#{name}
	</update>
	
</mapper>
