<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<context:component-scan base-package="com.timeline.vpn.web.controller" use-default-filters="false">
	    <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>   
	</context:component-scan>

	<!-- json接口性能监控拦截器 -->
	<mvc:interceptors> 
	    <mvc:interceptor>
	        <mvc:mapping path="/**/*.json" />
		    <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />
		</mvc:interceptor>
	    <mvc:interceptor>
			<mvc:mapping path="/**/*.json" />
			<bean class="com.timeline.vpn.web.common.interceptor.UserCheckHandlerInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/**/*.json" />
			<bean class="com.timeline.vpn.web.common.interceptor.CostHandlerInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/**/*.json" />
			<mvc:exclude-mapping path="/**/version.json"/>
			<mvc:exclude-mapping path="/**/login.json"/>
			<mvc:exclude-mapping path="/**/logout.json"/>
			<bean class="com.timeline.vpn.web.common.interceptor.VersionHandlerInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>
	    <!-- 配置基于Session的处理,将提交上来的locale参数进行处理 -->  
     <!-- 
    <bean id="localeResolver"
		class="com.timeline.vpn.web.common.MyHeaderLocaleResolver"/>
 -->
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<!--<value>messages</value> -->
				<value>conf.message</value>
			</list>
		</property>
		<property name="defaultEncoding" value="utf-8"/>
	</bean>
	<bean id="handlerMapping"
		class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
		<property name="order" value="0" />
	</bean>
	<mvc:default-servlet-handler />
	<!--CustomArgument support -->
	<bean class="com.timeline.vpn.web.common.CustomMethodHandlerAdapter">
		<property name="customArgumentResolvers">
		    <list>
		        <bean class="com.timeline.vpn.web.common.CustomWebArgumentResolver" />
		    </list>
		</property>
		<property name="webBindingInitializer">
			<bean
				class="org.springframework.web.bind.support.ConfigurableWebBindingInitializer">
				<property name="validator" ref="validator" />
				<property name="conversionService" ref="conversionService" />
			</bean>
		</property>
	</bean>
	<bean id="conversionService"
		class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<property name="converters">
			<set>
				<bean
					class="com.timeline.vpn.web.common.StringToDateConverter">
					<property name="dateFormatPatterns">
						<list>
						    <value>yyyy-MM-dd HH:mm:ss</value>
						    <value>yyyy-MM-dd HH:mm</value>
						    <value>yyyy-MM-dd HH</value>
						    <value>yyyy-MM-dd</value>
							<value>yyyyMMdd</value>
							<value>yyyy/MM/dd HH:mm:ss</value>
							<value>yyyy/MM/dd HH:mm</value>
							<value>yyyy/MM/dd</value>
						</list>
					</property>
				</bean>
			</set>
		</property>
	</bean>
	<!--use JSR-303 validation -->
	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<bean id="viewResolver" class="com.timeline.vpn.web.common.CustomViewResolver">
		<property name="jsonView">
			<bean
				class="com.timeline.vpn.web.common.MappingJacksonJsonViewWrapper">
				<property name="contentType" value="application/json;charset=utf-8" />
				<property name="modelKey" value="jsonResult" />
			</bean>
		</property>
	</bean>

	<bean id="handlerExceptionResolver"
		class="com.timeline.vpn.web.common.CommonHandlerExceptionResolver" />

</beans>
